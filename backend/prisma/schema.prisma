generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Boards {
  id Int @id @default(autoincrement())
  title String
  category String
  imageUrl String?
  author String
  cards Cards[]
}

model Cards {
  id Int @id @default(autoincrement())
  title String
  description String
  upvote Int?
  imageUrl String?
  author String
  board Boards @relation(fields: [boardId], references: [id])
  boardId Int
}
